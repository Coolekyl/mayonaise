{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <p>shopping cart</p>
    <table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">ItemNmr</th>
        <th scope="col">Naam</th>
        <th scope="col">Aantal</th>
        <th scope="col">Prijs</th>
    </tr>
    </thead>
    <tbody>

    {% for item in cart %}
        <tr>
            <th scope="row">{{ item[0] }}</th>
            <td>{{ item[2].getName }}</td>
            <td>{{ item[1] }}</td>
            <td>{{ item[2].getPrice }}</td>
        </tr>
    {% endfor %}

{% endblock %}